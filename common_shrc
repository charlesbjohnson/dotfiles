export PATH=$PATH:$HOME/.bin # User scripts/executables

# use nodenv for node
export PATH="$HOME/.nodenv/bin:$PATH"
eval "$(nodenv init -)"

export EDITOR="vim"
export BROWSER="chromium"
eval `dircolors ~/.config/dircolors-solarized/dircolors.256dark`

[[ -f ~/.aliases_zsh ]] && source ~/.aliases_zsh

# always use tmux
if [[ "$SESSION_TYPE" != remote/ssh && -z "$TMUX" ]]; then
  ID="`tmux ls 2>/dev/null | grep -vm1 attached | cut -d: -f1`"
  if [[ -z "$ID" ]]; then
    exec tmux new-session
  else
    exec tmux attach-session -t "$ID"
  fi
fi
