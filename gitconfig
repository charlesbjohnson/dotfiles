[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[commit]
  template = ~/.gitmessage
[merge]
  ff = only
[fetch]
  prune = true
[user]
  email = mail@cbjohnson.info
  name = Charles B Johnson
[color]
  ui = true
[web]
  browser = chromium
[alias]
  a = add
  c = commit
  co = checkout
  cl = clone
  br = branch --all --verbose
  brg = show-branch --all
  rmt = remote --verbose
  st = status --branch --short --untracked-files=all
  diffs = diff --staged
  amend = commit --amend --reuse-message HEAD --verbose
  unstage = reset HEAD --
  undo = reset HEAD~
  l = log --stat --decorate --relative-date
  lgr = log --oneline --all --graph --decorate
  ldf = log --oneline --patch-with-stat --full-diff --decorate --since={3.weeks.ago}
[include]
  path = ~/.gitconfig.local
