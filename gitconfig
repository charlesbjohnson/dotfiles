[alias]
  a        = add
  alias    = config --get-regexp '^alias.'
  amend    = commit --amend --verbose
  br       = branch --verbose
  bra      = branch --all --verbose
  brd      = branch --delete
  brmv     = branch --move
  brrd     = push origin --delete
  c        = commit
  df       = diff
  dfsg     = diff --staged
  dfstsh   = stash show --patch
  fixup    = commit --fixup
  l        = log --graph --oneline
  la       = log --graph --stat
  ldf      = log --oneline --patch-with-stat --full-diff
  lfz      = ! git log --oneline | fzf --preview 'git show --color=always "$(echo {} | cut -f 1 -d \" \")"' | cut -f 1 -d ' '
  pf       = push --force-with-lease
  rba      = rebase --abort
  rbc      = rebase --continue
  rbi      = rebase --interactive
  rmt      = remote --verbose
  st       = status --short --branch
  stsh     = stash --staged
  stsha    = stash --include-untracked
  sw       = switch
  uncommit = reset HEAD~1
  undo     = restore
  unstage  = restore --staged
[commit]
  template = ~/.gitmessage
[core]
  autocrlf     = input
  excludesfile = ~/.gitignore
  pager        = delta
[delta]
  file-decoration-style = yellow box
  file-style            = yellow
  hunk-header-style     = omit
  line-numbers          = true
  navigate              = true
  syntax-theme          = Nord
[diff]
  tool       = nvimdiff
  colormoved = default
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[fetch]
  prune     = true
  prunetags = true
[init]
  defaultbranch = master
[interactive]
  difffilter = delta --color-only
[merge]
  ff            = only
  tool          = nvimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
  ff = only
[push]
  default = current
[rebase]
  autosquash = true
[user]
  email = mail@cbjohnson.io
  name  = Charles B Johnson
[include]
  path = ~/.config/dotfile/gitconfig.local
[include]
  path = ~/.config/dotfile/gitconfig.secret
