[alias]
  a        = add
  aa       = add --all
  alias    = config --get-regexp '^alias.'
  amend    = commit --amend --reuse-message HEAD --verbose
  ap       = add --patch
  br       = branch --verbose
  bra      = branch --all --verbose
  brd      = branch --delete
  brg      = show-branch --all
  brmv     = branch --move
  brrd     = push origin --delete
  c        = commit
  cl       = clone
  cleanall = clean --force -d
  co       = checkout
  df       = diff --color
  dfh      = stash show --color --patch
  dfs      = diff --color --staged
  discard  = checkout --
  fix      = commit --fixup
  l        = log --oneline --graph
  la       = log --oneline --graph --all
  ldf      = log --oneline --patch-with-stat --full-diff --decorate
  ll       = log --stat --decorate --relative-date
  pf       = push --force-with-lease
  rba      = rebase --abort
  rbc      = rebase --continue
  rbi      = rebase --interactive
  rmt      = remote --verbose
  sha      = stash --include-untracked
  shax     = stash --include-untracked --keep-index
  st       = status --branch --short --untracked-files=all
  undo     = reset HEAD~1
  unstage  = reset HEAD --
[color]
  ui = true
[commit]
  template = ~/.gitmessage
  gpgsign  = true
[core]
  autocrlf     = input
  excludesfile = ~/.gitignore
  pager        = "diff-so-fancy | less --tabs 4 -RFX"
[diff]
  tool = nvimdiff
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[fetch]
  prune = true
[merge]
  ff   = only
  tool = nvimdiff
[mergetool]
  prompt = false
[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
  ff = only
[push]
  default = current
[rebase]
  autosquash = true
[user]
  email      = mail@cbjohnson.info
  name       = Charles B Johnson
  signingKey = 390184033B3454E3
[include]
  path = ~/.config/dotfile/gitconfig.local
[include]
  path = ~/.config/dotfile/gitconfig.secret
