[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[commit]
  template = ~/.gitmessage
[user]
  email = mail@cbjohnson.info
  name = Charles B Johnson
[color]
  ui = true
[web]
  browser = chromium
[alias]
  a = add
  c = commit
  ch = checkout
  cl = clone
  br = branch
  st = status --branch --short --untracked-files=all
  dfs = diff --staged
  amend = commit --amend
  unstage = reset HEAD --
  undo = reset HEAD~
  l = log --oneline --abbrev-commit --stat
  lgr = log --graph --stat --decorate --since={3.weeks.ago}
