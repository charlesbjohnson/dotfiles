[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[commit]
  template = ~/.gitmessage
[merge]
  ff = only
[fetch]
  prune = true
[user]
  email = mail@cbjohnson.info
  name = Charles B Johnson
[color]
  ui = true
[web]
  browser = chromium
[alias]
  a = add
  amend = commit --amend --reuse-message HEAD --verbose
  br = branch --verbose --verbose
  bra = branch --all --verbose --verbose
  brd = branch --delete
  brg = show-branch --all
  brrd = push origin --delete
  brrn = branch --move
  c = commit
  cl = clone
  co = checkout
  cop = checkout -
  diffs = diff --staged
  l = log --stat --decorate --relative-date
  ldf = log --oneline --patch-with-stat --full-diff --decorate --since={3.weeks.ago}
  lgr = log --oneline --all --graph --decorate
  rmt = remote --verbose
  st = status --branch --short --untracked-files=all
  undo = reset HEAD~
  unstage = reset HEAD --
[include]
  path = ~/.gitconfig.local
