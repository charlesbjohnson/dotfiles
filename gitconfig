[alias]
  a       = add
  aa      = add --all
  alias   = config --get-regexp '^alias.'
  amend   = commit --amend --verbose
  br      = branch --verbose
  bra     = branch --all --verbose
  brd     = branch --delete
  brmv    = branch --move
  brrd    = push origin --delete
  c       = commit
  cleanf  = clean --force -d
  co      = checkout
  df      = diff
  dfsg    = diff --staged
  dfsh    = stash show --patch
  discard = checkout --
  fixup   = commit --fixup
  l       = log --all --graph --oneline
  la      = log --all --graph --stat --relative-date
  ldf     = log --oneline --patch-with-stat --full-diff
  pf      = push --force-with-lease
  rba     = rebase --abort
  rbc     = rebase --continue
  rbi     = rebase --interactive
  rmt     = remote --verbose
  sha     = stash --include-untracked
  shax    = stash --include-untracked --keep-index
  st      = status --branch --short --untracked-files=all
  undo    = reset HEAD~1
  unstage = reset HEAD --
[color]
  ui = true
[commit]
  template = ~/.gitmessage
  gpgsign  = true
[core]
  autocrlf     = input
  excludesfile = ~/.gitignore
  pager        = delta
[delta]
  file-decoration-style = yellow box
  file-style            = yellow
  hunk-header-style     = omit
  line-numbers          = true
  navigate              = true
  syntax-theme          = Nord
[diff]
  tool = nvimdiff
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[fetch]
  prune = true
[interactive]
  diffFilter = delta --color-only
[merge]
  ff   = only
  tool = nvimdiff
[mergetool]
  prompt = false
[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
  ff = only
[push]
  default = current
[rebase]
  autosquash = true
[user]
  email      = mail@cbjohnson.info
  name       = Charles B Johnson
  signingKey = 390184033B3454E3
[include]
  path = ~/.config/dotfile/gitconfig.local
[include]
  path = ~/.config/dotfile/gitconfig.secret
