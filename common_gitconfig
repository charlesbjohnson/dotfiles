[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[commit]
  template = ~/.gitmessage
[user]
  email = mail@cbjohnson.info
  name = Charles B Johnson
[color]
  ui = true
[web]
  browser = chromium
[alias]
  a = add
  at = add --update
  c = commit
  ch = checkout
  chb = checkout -b
  cl = clone
  br = branch
  bra = branch --all
  st = status --branch --short --untracked-files=all
  diffs = diff --staged
  am = commit --amend
  amend = commit --amend
  un = reset HEAD --
  unstage = reset HEAD --
  l = log --oneline --abbrev-commit --stat
  lgr = log --graph --stat --decorate --since={3.weeks.ago}
  aliases = !git config --list | grep alias | cut -c 7-
