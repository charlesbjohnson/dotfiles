[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[commit]
  template = ~/.gitmessage
[user]
  email = mail@cbjohnson.info
  name = Charles B Johnson
[color]
  ui = true
[web]
  browser = chromium
[alias]
  amend = commit --amend
  unstage = reset HEAD --
  staged = diff --staged
  lg = log --graph --stat --decorate --since={3.weeks.ago}
  l = log --oneline --abbrev-commit --stat
  st = status -s
  df = diff --color-words
