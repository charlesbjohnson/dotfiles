[include]
  path = ~/.common_gitconfig
[credential]
  helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
[mergetool "meld"]
  cmd = meld --output \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustexitcode = true
[mergetool]
  prompt = false
[merge]
  tool = meld
[difftool "meld"]
  cmd = meld --diff \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = meld
